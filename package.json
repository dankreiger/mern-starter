{
  "name": "puppyconnector",
  "version": "1.0.0",
  "description": "Social network for puppies",
  "license": "MIT",
  "author": "Dan Kreiger <dan@dankreiger.com> (http://www.dankreiger.com/)",
  "main": "server.js",
  "scripts": {
    "server": "nodemon --exec babel-node --presets env,stage-2 server.js",
    "sort": "sort-package-json",
    "start": "nodemon --exec babel-node --presets env,stage-2 server.js",
    "test": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "bcryptjs": "2.4.3",
    "body-parser": "1.18.3",
    "dotenv": "6.1.0",
    "express": "4.16.4",
    "gravatar": "1.6.0",
    "jsonwebtoken": "8.4.0",
    "mongoose": "5.3.12",
    "passport": "0.4.0",
    "passport-jwt": "4.0.0",
    "validator": "10.9.0"
  },
  "devDependencies": {
    "@commitlint/cli": "7.2.1",
    "@commitlint/config-conventional": "7.1.2",
    "babel-cli": "6.26.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-stage-2": "6.24.1",
    "husky": "1.1.4",
    "jest": "23.6.0",
    "lint-staged": "8.0.5",
    "mockingoose": "2.11.0",
    "nodemon": "1.18.6",
    "prettier": "1.15.2",
    "sort-package-json": "1.16.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --single-quote --write",
      "git add"
    ]
  }
}
